generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Customer {
  id        String   @id @default(uuid())
  name      String
  phone     String
  email     String?
  cpf       String?
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  children  Child[]
  payments  Payment[]
  packages  Package[]
}

model Child {
  id         String   @id @default(uuid())
  name       String
  age        Int
  customerId String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  customer   Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  visits     Visit[]
}

model Visit {
  id          String    @id @default(uuid())
  childId     String
  checkIn     DateTime
  checkOut    DateTime?
  duration    Int?
  value       Float?
  paid        Boolean   @default(false)
  paymentId   String?
  unitId      String    @default("unit-1")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  child       Child     @relation(fields: [childId], references: [id], onDelete: Cascade)
  payment     Payment?  @relation(fields: [paymentId], references: [id])
}

model Payment {
  id          String   @id @default(uuid())
  customerId  String
  amount      Float
  method      String
  status      String   @default("pending")
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  customer    Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
  visits      Visit[]
}

model Package {
  id          String   @id @default(uuid())
  customerId  String
  type        String
  hours       Float
  usedHours   Float    @default(0)
  price       Float
  expiresAt   DateTime?
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  customer    Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)
}

model Settings {
  id              String   @id @default(uuid())
  key             String   @unique
  value           String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
